{
  "manifest_version": 3,
  "name": "The New York Times Unlocker",
  "version": "2025.1",
  "description": "The New York Times Unlocker: An extension that whisks away subscription barriers and celebrates with a lively animation.",
  "icons": {
    "16": "tnyt-unlocker.png",
    "32": "tnyt-unlocker.png",
    "48": "tnyt-unlocker.png",
    "128": "tnyt-unlocker.png"
  },
  "action": {
    "default_title": "Your Extension",
    "default_icon": {
      "16": "tnyt-unlocker.png",
      "32": "tnyt-unlocker.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["tnyt-unlocker.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
